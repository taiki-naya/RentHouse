<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<p>
  <% @stations.each do |station| %>
   <% if @property.stations.any? %>
    <strong>路線:</strong>
    <%= station.line %>
    <strong>駅名:</strong>
    <%= station.station %>
    <strong>徒歩分数:</strong>
    <%= station.times %>
   <% end %>
   <br>
  <% end %>
</p>

<%= link_to '編集する', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
